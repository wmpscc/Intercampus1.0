<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wmpscc.intercampus10.Explore">

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator_explore"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magic_indicator_explore"
        android:layout_above="@+id/line_tab_home"
        android:layout_centerHorizontal="true">

    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/line_tab_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="#ffffff" />

</RelativeLayout>
