<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_marginTop="10dp"

            android:id="@+id/Re01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName_colMess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="monospace"
                android:layout_toRightOf="@+id/ivUserPic_colMess"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="你的名字" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserPic_colMess"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:src="@drawable/ic_userphoto_icon"
                card_view:civ_border_color="#000000"
                card_view:civ_border_width="0dp" />

            <TextView
                android:id="@+id/tvZHUANLAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00c5c5"
                android:textSize="16sp"
                android:typeface="monospace"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="专栏" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Re02"
            android:layout_below="@+id/Re01"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivContext_colMess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/ic_item01_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/mRe01"
                android:background="#91000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_alignBottom="@+id/ivContext_colMess">

                <TextView
                    android:id="@+id/tvSmallTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_below="@+id/ivMark"
                    android:typeface="monospace"
                    android:layout_toRightOf="@+id/ivMark"
                    android:text="此处是小标题" />

                <ImageView
                    android:id="@+id/ivMark"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:srcCompat="@drawable/ic_mark_icon" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Re03"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Re02"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000000"
                android:textSize="25sp"
                android:text="此处是大标题" />

            <TextView
                android:id="@+id/tvContext_colMess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTittle"
                android:typeface="monospace"
                android:textColor="#5f5f5f"
                android:textSize="16sp"
                android:text="@string/context" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Re04"
            android:layout_below="@+id/Re03"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/shinebutton1_colMess"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="#e6e6e6"
                app:allow_random_color="false"
                app:btn_color="#797979"
                app:btn_fill_color="#fb0019"
                android:layout_marginLeft="10dp"
                app:siShape="@drawable/ic_like_icon" />

            <TextView
                android:id="@+id/tvlikeTimes_colMess"
                android:layout_toRightOf="@+id/shinebutton1_colMess"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:typeface="monospace"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="10" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/shinebutton2_colMess"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/tvlikeTimes_colMess"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="#e6e6e6"
                app:allow_random_color="false"
                app:btn_color="#797979"
                app:btn_fill_color="#2600fb"
                app:siShape="@drawable/ic_comment_icon" />
            <TextView
                android:id="@+id/tvCommentTime_colMess"
                android:layout_toRightOf="@+id/shinebutton2_colMess"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textColor="#000000"
                android:text="10" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/shinebutton3_colMess"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/tvCommentTime_colMess"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="#e6e6e6"
                app:allow_random_color="false"
                app:btn_color="#797979"
                app:btn_fill_color="#edfe00"
                app:siShape="@drawable/ic_share_icon" />

            <ImageButton
                android:id="@+id/ibMenu_colMess"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                card_view:srcCompat="@drawable/ic_other_icon" />


        </RelativeLayout>

        <View
            android:id="@+id/line_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Re04"
            android:background="#e7e7e7" />
    </RelativeLayout>

</android.support.v7.widget.CardView>